{% extends 'base.html.twig' %}

{% block titre %}Détail Article{% endblock %}

{% block contenu %}

<div class="row text-center mt-5">
    <h1>
        Détail {{ article.name }}
    </h1>
</div>
<div class="row mt-5">
    <div class="col-6 offset-3">
        {% include "parts/_message.html.twig" %}
        
        <p><b>Description</b> {{ article.description }} </p>
        <p><b>Prix</b> {{ article.price }} </p>
        <p><b>Date de création</b> {{ article.dateCreated|date("d/m/Y") }} </p>
        <p><b>Catégorie</b> {{ article.category.name }} </p>

        <form action="{{ path("app_article_delete") }}" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer cet article?')">
            <input type="hidden" name="_token" value="{{ csrf_token('coucou' ~ article.id) }}">
            <input type="hidden" name="id" value="{{ article.id }}" >
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>

    </div>
</div>
{% endblock %}
